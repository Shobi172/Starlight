<%- include("../partials/adminheader.ejs") %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

   <h1 class="text-decoration-underline">Products</h1> 
   <br>
   <a href='/admin/addproduct'><button type="submit" class="btn btn-success" >Add Product</button></a>

  <br><br>
  <table class="table" id="table">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">price</th>
        <th scope="col">category</th>
        <th scope="col">description</th>
        <th scope="col">Stock</th> 
        <th scope="col">image</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        
      </tr>
    </thead>

    <tbody>
      <% allproducts.forEach((allproducts,index)=>{ %>
      <tr>
        <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">
        <%= index + 1 %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <%= allproducts.name %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <%= allproducts.price %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <%= allproducts.category.name %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <%= allproducts.description %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <%= allproducts.stock %>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <img src="/products/img/<%=allproducts._id%>.jpg" style="width:5rem;">
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <a href="/admin/editproduct/<%=allproducts._id%>"><button type="submit" class="btn btn-primary">Edit</button></a>
        </td>
        <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
          <form action="/admin/deleteproduct/<%=allproducts._id%>? method="post">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete <%= allproducts.name %>')">Delete</button>
          </form>
        </td>
        </tr>
  <% }) %> 
</tbody>
  </table>
</div>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
crossorigin="anonymous"></script>
</body>
</html>