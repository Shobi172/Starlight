    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css">
    <section class="body-section">
<h3 class="i-names">Add Coupon</h3>
        <div class="container d-flex justify-content-center">
          <div class=" center-div p-2">
            <form action="" method="post" id="coupon_form">
              <div class="row p-2 mt-3">
                <div class="col-md-12">
                  <label for="formFile" class="form-label">Coupon Code:</label>
                  <input class="form-control" type="text" id="productName" name="code" required>
                  <div id="nameerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2">
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Offer:(in %)</label>
                  <input class="form-control" type="text" id="price" name="offer" required>
                  <div id="priceerror" class="error-message"></div>
                </div>
                <div class="col-md-6">
                  <label for="formFile" class="form-label">Maximum Amount:(in Rs)</label>
                  <input class="form-control" type="text" id="stock" name="amount" required>
                  <div id="stockerror" class="error-message"></div>
                </div>
              </div>
              <div class="row p-2 mt-2 mb-2">
                <div class="col-md-12 d-flex justify-content-center">
                  <button class="btn sub-btn btn-lg">Add Coupon</button>
                </div>
              </div>
            </form>
          </div>
      </div>
    </div>
</section>
